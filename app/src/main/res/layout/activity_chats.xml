<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChatsActivity">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation_chat"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_navication"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navication_chat"
        app:itemIconTint="@color/custom_color_bottom_navication_main"
        app:itemTextColor="@color/custom_color_bottom_navication_main"/>

</RelativeLayout>